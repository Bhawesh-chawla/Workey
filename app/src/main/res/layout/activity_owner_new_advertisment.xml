<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_owner_new_advertisment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robpercival.workey.OwnerNewAdvertisment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Shop name"
                android:ems="10"
                android:layout_below="@+id/scrollView2"
                android:layout_alignParentStart="true"
                android:id="@+id/ownerAdvertismentShopName" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:inputType="textMultiLine"
                android:hint="Work Description"
                android:ems="10"
                android:layout_below="@+id/scrollView2"
                android:layout_alignParentStart="true"
                android:id="@+id/ownerAdvertismentWorkDescription" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:inputType="textMultiLine"
                android:hint="Worker Description"
                android:ems="10"
                android:layout_below="@+id/scrollView2"
                android:layout_alignParentStart="true"
                android:id="@+id/ownerAdvertismentWorkerDescription" />
            <TextView
                android:text="Owner Shop address :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:id="@+id/textView2"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="shop number"

                android:ems="10"
                android:id="@+id/ownerAdvertismentShopNumber" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="street"

                android:ems="10"
                android:id="@+id/ownerAdvertismentStreet" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="area"

                android:ems="10"
                android:id="@+id/ownerAdvertismentArea" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="city"
                android:ems="10"
                android:id="@+id/ownerAdvertismentCity" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Salary Range (Eg: 3000 - 4000 Rs)"
                android:ems="10"
                android:id="@+id/ownerAdvertismentSalaryRange" />

            <Button
                android:text="Post"
                android:layout_gravity = "center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/button4"
                android:onClick="postAdvertisment" />

        </LinearLayout>



    </ScrollView>



</RelativeLayout>
