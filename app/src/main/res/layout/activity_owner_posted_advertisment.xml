<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_owner_posted_advertisment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robpercival.workey.OwnerPostedAdvertisment">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ownerAdvertismentCard"
            android:background="@drawable/shapechange"
            android:alpha="0">

            <TextView

                android:textSize="20sp"
                android:textColor="@android:color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopNameShowAdvertisment"
                android:elevation="30dp"
                android:padding="10dp"
                />
            <TextView

                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopAddressShowAdvertisment"
                android:elevation="30dp"
                android:padding="10dp"
                />
            <TextView

                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/salaryRangeShowAdvertisment"
                android:elevation="30dp"
                android:padding="10dp"
                />
            <TextView

                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workDescriptionShowAdvertisment"
                android:elevation="30dp"
                android:padding="10dp"
                />
            <TextView

                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workerDescriptionShowAdvertisment"
                android:elevation="30dp"
                android:padding="10dp"
                />

            <Button
                android:text="Delete Advertisement"
                android:onClick="deleteAdvertisment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shapechange2"
                android:layout_below="@+id/workerDescriptionShowAdvertisment"
                android:layout_alignStart="@+id/ownerNoAdvertismentPosted"

                android:layout_marginStart="22dp"
                android:layout_marginTop="57dp"
                android:id="@+id/button5" />


        </LinearLayout>


    </ScrollView>



    <Button
        android:text="New advertisment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ownerNewAdvertisment"
        android:onClick="addNewAdvertisment"
        android:background="@drawable/shapechange2"
        android:layout_gravity = "bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="No Advertisment Posted"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/ownerNoAdvertismentPosted" />



</RelativeLayout>
