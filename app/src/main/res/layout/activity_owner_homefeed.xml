<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_owner_homefeed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robpercival.workey.OwnerHomefeed">


    <SearchView
        android:layout_height="wrap_content"
        android:queryHint="search workers"
        android:iconifiedByDefault="false"
        android:id="@+id/ownerHomeSearch"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    </SearchView>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ownerHomeSearch"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/ownerHomeListView" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="ToChatUserOwner"
        android:background="@drawable/shapechange4"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"

            app:srcCompat="@drawable/ic_baseline_chat_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Chats"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </RelativeLayout>


</RelativeLayout>
